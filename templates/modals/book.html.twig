<div class="modal" data-modal="true" id="book_modal">
    <div class="modal-content max-w-[600px] top-[15%]">
        <div class="modal-header py-4 px-5">
            <h3 class="modal-title">Ma lecture</h3>
        </div>
        <div class="modal-body p-0 pb-5">
            <div class="scrollable-y-auto" data-scrollable="true" data-scrollable-max-height="auto"
                 data-scrollable-offset="300px">
                <form action="{{ path('app_book_read') }}" method="POST">
                    <div class="flex flex-col gap-5 p-5">
                        <div class="flex flex-col gap-1">
                            <label for="book" class="form-label font-normal text-gray-900">Livre</label>
                            <select id="book" class="select" name="book">
                                    <option value="1">Attaque des Titans</option>
                                    <option value="2">Le Pouvoir du Moment Présent</option>
                                    <option value="3">Les 7 habitudes des gens efficaces</option>
                                    <option value="4">L’Alchimiste</option>
                                    <option value="5">Réfléchissez et devenez riche</option>
                                    <option value="6">Comment se faire des amis</option>
                                    <option value="7">Les Secrets de l'esprit millionnaire</option>
                                    <option value="8">Pensez et devenez riche</option>
                                    <option value="9">La Magie du rangement</option>
                                    <option value="10">Le Moine qui vendit sa Ferrari</option>
                                    <option value="11">Le Cercle des menteurs</option>
                                    <option value="12">L'art de la guerre</option>
                                    <option value="13">Le Charisme</option>
                                    <option value="14">La Magie du matin</option>
                                    <option value="15">Réveillez le leader en vous</option>
                                    <option value="16">La semaine de 4 heures</option>
                                    <option value="17">Une vie de créativité</option>
                                    <option value="18">Vivre et réussir</option>
                                    <option value="19">La richesse intérieure</option>
                                    <option value="20">Vaincre le stress</option>
                                    <option value="21">L'art du bonheur</option>
                            </select>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label class="form-label font-normal text-gray-900">Mes notes</label>
                            <textarea name="description" class="textarea" placeholder="Notez-ici les idées importantes de l'oeuvre."></textarea>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label for="rating" class="form-label font-normal text-gray-900">Note</label>
                            <select id="rating" class="select" name="rating">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label class="switch">
                                <span class="switch-label font-normal text-gray-900">Lecture terminée</span>
                                <input name="check" type="checkbox" value="1"/>
                            </label>
                        </div>

                        <div class="flex">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>