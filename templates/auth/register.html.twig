{% extends 'auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!-- Page -->
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            {{ form_start(registrationForm, {'attr': {'class': 'card-body flex flex-col gap-5 p-10'}}) }}
                <div class="text-center mb-2.5">
                    <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
                        Inscription
                    </h3>
                    <div class="flex items-center justify-center">
                        <span class="text-2sm text-gray-700 me-1.5">
                            Vous avez déjà un compte ?
                        </span>
                        <a class="text-2sm link" href="{{ path('app_login') }}">
                            Me connecter
                        </a>
                    </div>
                </div>

                <div class="flex flex-col gap-1">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label text-gray-900'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'input', 'placeholder': 'Adresse email'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="flex flex-col gap-1">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label text-gray-900'}}) }}
                    <div class="input" data-toggle-password="true">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
                        </button>
                    </div>
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="flex flex-col gap-1">
                    {{ form_label(registrationForm.confirmPassword, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label text-gray-900'}}) }}
                    <div class="input" data-toggle-password="true">
                        {{ form_widget(registrationForm.confirmPassword, {'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
                        </button>
                    </div>
                    {{ form_errors(registrationForm.confirmPassword ) }}
                </div>

                {# <div class="flex flex-col gap-1">
                    {{ form_label(registrationForm.agreeTerms, 'Accepter les conditions', {'label_attr': {'class': 'form-label text-gray-900'}}) }}
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox checkbox-sm'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div> #}

                <button class="btn btn-primary flex justify-center grow" type="submit">
                    Inscription
                </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    <!-- End of Page -->
{% endblock %}
